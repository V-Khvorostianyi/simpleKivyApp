
#:import w wallet_app
#:import start_screen uix.kv.activities


<Root>:
    Label:
        center_x: root.center_x
        center_y:root.height/2 + 40
        orientation: 'vertical'
        text: "Enter your name"

    TextInput:
        size: 200,30
        center_y: root.height/2
        center_x: root.center_x
        id:form

    Label:
        text: w.wallet.list_view(w.wallet.account_list)
        center_x: root.center_x-100
        id: field1

    Label:

        center_x: root.center_x
        id: field2

    Button:
        size: 100,30
        text: "ok"
        center_y: root.height/2 - 40
        center_x: root.center_x
        on_press:
            field2.text = w.wallet.list_view(w.wallet.account_list)
            field1.text = w.wallet.last_transaction_view()
            w.wallet.add_transaction(w.Transaction(10,'test','test'))
