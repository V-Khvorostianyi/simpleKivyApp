#:import wallet wallet_app.wallet
#:import Transaction wallet_app.wallet
#:import Account wallet_app.wallet
#:import Category wallet_app.wallet

<Root>:
    size:150,50
    Label:
        center_x: root.center_x
        center_y:root.height/2 + 40
        orientation: 'vertical'
        text: "Enter your name"

    TextInput:
        size: 200,30
        center_y: root.height/2
        center_x: root.center_x
        id:form

    Label:
        text: wallet.list_view(wallet.account_list)
        center_x: root.center_x-100
        id: field1

    Label:

        center_x: root.center_x
        id: field2

    Button:
        size: 100,30
        text: "ok"
        center_y: root.height/2 - 40
        center_x: root.center_x

        on_press:
            field2.text = wallet.list_view(wallet.account_list)
            field1.text = wallet.last_transaction_view()
