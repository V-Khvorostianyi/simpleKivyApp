<MainScreen>:
    GridLayout:
        cols: 2
        size: self.parent.width/2,self.parent.height/4
        center: self.parent.center
        Button:
            text: "income"
            on_press:
                self.parent.clear_widgets()
                root.add_widget(program.TrScreen())
        Button:
            text: "outcome"
        Button:
            text: "log"
        Button:
            text: "balance"

<TrScreen>:
    BoxLayout
        TextInput:
            id: val
        BoxLayout:
            AccDrop
            CatDrop
            Button:
                text:"Submit"
            Button:
                text:"Cancel"
                on_press:
                    root.clear_widgets()
















