#:import program program
<StartScreen>:
    id: sc
    GridLayout:
        cols: 1
        Label:
            text: "a"
        Button:
            text: "hello"
            on_press:
                root.clear_widgets()
                root.add_widget(program.InputWindow())

<InputWindow>:
    id: in_win
    GridLayout:
        cols:1
        Label:
            text: "Enter value"
        TextInput:
        Label:
            text: "Choose account"
        Button:
            text: "Back"
            on_press:
                root.clear_widgets()
                root.add_widget(program.Root())

<Root>:
    size: root.size
    canvas:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size







